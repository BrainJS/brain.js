{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    // "declaration": true,
    // "emitDeclarationOnly": true,
    // "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    // "noEmit": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "lib": ["es2019", "dom"]
  },
  "exclude": [
    "node_modules",
    "**/*.json",
    "**/*.d.ts",
    "dist",
    "examples/javascript/**/*"
  ]
}
