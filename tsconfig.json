{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    // "declaration": true,
    // "emitDeclarationOnly": true,
    // "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    // "noEmit": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018", // To match node 10: https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping#node-10
    "lib": ["es2019", "dom", "esnext"]
  },
  "exclude": [
    "node_modules",
    "**/*.json",
    "**/*.d.ts",
    "dist",
    "examples",
    "__coverage__"
  ]
}
