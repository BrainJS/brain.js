{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "incremental": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6"
  },
  "exclude": ["node_modules", "examples", "dist", "**/*.json", "**/*.config.js"]
}
